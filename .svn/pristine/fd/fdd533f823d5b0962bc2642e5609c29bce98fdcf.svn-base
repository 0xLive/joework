using UnityEngine;
using System.Collections;

/// <summary>
///圆形
/// </summary>
public class Circle :Shape
{
	public float radius;

	public Circle(float _radius,Vector2 _center):base(_center)
	{
		this.m_shapeType = ShapeType.Circle;

		this.radius = _radius;
		this.center = _center;
	}

	public void Refresh(Vector2 _center)
	{
		this.center = _center;
	}
}
